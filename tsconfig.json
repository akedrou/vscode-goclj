{
    "compilerOptions": {
      "target": "es6",
      "lib": ["es6"],
      "module": "commonjs",
      "outDir": "out",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": [
        "@types/vscode",
        "@types/node",
        "@types/mocha",
        "@vscode/test-electron"
    ],
    },
    "include": ["src"],
    "exclude": ["node_modules", ".vscode-test"]
}
